<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dl_main"
    android:background="@drawable/sky"
    android:orientation="vertical" >
    

     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">
     
     <FrameLayout 
         android:id="@+id/fl_mainContent"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1">
         
     </FrameLayout> 
      
    <View
        android:id="@+id/view_line"
         android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_main">
        
    </View> 
   <LinearLayout
       android:id="@+id/ll_mainTab" 
       android:layout_width="match_parent"
       android:layout_height="@dimen/TitleBar"
       android:background="@color/white_main"
       >
       

            <LinearLayout
                android:id="@+id/ll_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_home"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                         android:layout_marginTop="3dp"
                    android:src="@drawable/nav_neaby" />

                <TextView
                    android:id="@+id/tv_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="主页"
                    android:textColor="@color/tab_textcolor"
                    android:textSize="12sp" />
            </LinearLayout>
     <LinearLayout 
         android:id="@+id/ll_nearby"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:orientation="vertical"
         android:gravity="center"
         >

         <ImageView
             android:id="@+id/iv_nearby"
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_marginTop="3dp"
             android:src="@drawable/nav_neaby" />

         <TextView
             android:id="@+id/tv_nearby"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="3dp"
             android:textSize="12sp"
             android:textColor="@color/tab_textcolor"
             android:text="附近" />
        
     </LinearLayout>   
     <LinearLayout 
         android:id="@+id/ll_message"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:orientation="vertical"
         android:gravity="center"
         >

         <ImageView
             android:id="@+id/iv_message"
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_marginTop="3dp"
             android:src="@drawable/nav_info" />

         <TextView
             android:id="@+id/tv_message"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="3dp"
             android:textSize="12sp"
              android:textColor="@color/tab_textcolor"
             android:text="消息" />
        
     </LinearLayout>   
     <LinearLayout 
         android:id="@+id/ll_me"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:orientation="vertical"
         android:gravity="center"
         >

         <ImageView
             android:id="@+id/iv_me"
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_marginTop="3dp"
             android:src="@drawable/nav_me" />

         <TextView
             android:id="@+id/tv_me"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="3dp"
             android:textSize="12sp"
              android:textColor="@color/tab_textcolor"
             android:text="我" />
        
     </LinearLayout>   
   </LinearLayout>     
     </LinearLayout>  
     <com.bm.photoview.libraries.PhotoView
        android:id="@+id/pv_showPhoto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:scaleType="centerCrop"
        android:visibility="gone" /> 
 
</RelativeLayout>