<!-- ?xml version="1.0" encoding="utf-8"? -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/zoom_shape_stroke"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_zoom_in"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:background="@drawable/zoom_selector_press_bg"
        android:src="@drawable/zoomin_big" />

    <View
        android:layout_width="40dip"
        android:layout_height="0.5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@color/gray" />
		
    <ImageView
        android:id="@+id/iv_zoom_out"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:background="@drawable/zoom_selector_press_bg"
        android:src="@drawable/zoomout_small" />

</LinearLayout>